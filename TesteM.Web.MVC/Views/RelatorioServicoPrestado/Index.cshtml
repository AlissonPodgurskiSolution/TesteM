@model IList<TesteM.Application.ViewModels.ServicoPrestadoViewModel>

@{
    ViewBag.Title = "Relatório de Serviços";
}

<h2>Relatório de Serviços</h2>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <form id="formServicoPrestadoRelatorio">
                    <div class="panel-body">
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="idPeriodoDe">Periodo de</label>
                                <input type="date" class="form-control" id="idPeriodoDe" name="idPeriodoDe" value="" required/>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="idPeriodoAte">Até</label>
                                <input type="date" class="form-control" id="idPeriodoAte" name="idPeriodoAte" value="" required/>
                            </div>

                            <div class="form-group col-md-3">
                                <label for="idValorMinimo">Valor Minimo</label>
                                <input type="number" class="form-control" id="idValorMinimo" name="idValorMinimo" placeholder="Valor (R$)" value="" min="0" max="999999">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="idValorMaximo">Valor Máximo</label>
                                <input type="number" class="form-control" id="idValorMaximo" name="idValorMinimo" placeholder="Valor (R$)" value="" min="0" max="999999">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="ddlClientes">Cliente</label>
                                <select id="ddlClientes" class="form-control">
                                    <option value="">Todos</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="ddlBairro">Bairro</label>
                                <select id="ddlBairro" class="form-control">
                                    <option value="">Todos</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="ddlCidade">Cidade</label>
                                <select id="ddlCidade" class="form-control">
                                    <option value="">Todos</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="ddlEstado">Estado</label>
                                <select id="ddlEstado" class="form-control">
                                    <option value="">Todos</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-row">

                            <div class="form-group col-md-4">
                                <label for="ddlTiposServicos">Tipo de Servico</label>
                                <select id="ddlTiposServicos" class="form-control">
                                    <option value="">Todos</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="ddlFornecedores">Fornecedor</label>
                                <select id="ddlFornecedores" class="form-control">
                                    <option value="">Todos</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <input type="button" id="btnPesquisar" class="btn btn-primary" value="Pesquisar"/>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="DivTabela" style=""></div>


<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet"/>
<link href="~/Content/DataTables/css/buttons.dataTables.min.css" rel="stylesheet"/>
@section Scripts{
    <script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.flash.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.flash.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.html5.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.print.min.js"></script>
    
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="@Url.Content("~/Scripts/RelatorioServicoPrestado/RelatorioServicoPrestadoJS.js")"></script>
}