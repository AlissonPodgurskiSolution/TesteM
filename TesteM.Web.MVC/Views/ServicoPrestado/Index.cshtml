@model IList<TesteM.Application.ViewModels.ServicoPrestadoViewModel>

@{
    ViewBag.Title = "Gerenciamento de Serviços";
}

<h2>Gerenciamento de Serviços</h2>
<br/>
<button type="button" class="btn btn-primary btn-block" id="mostrar">Adicionar Serviço Prestado</button>
<br/>
<div id="camadaefeitos" style="display: none;">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <form id="formServicoPrestado">
                        <div class="panel-body">
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="Descricao">Descrição do Servico</label>
                                    <input type="text" class="form-control" id="IdDescricao" name="IdDescricao" placeholder="Descrição Serviço" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="idDataAtendimento">Data Atendimento</label>
                                    <input type="date" class="form-control" id="idDataAtendimento" name="idDataAtendimento" placeholder="Data Atendimento" value="" required/>
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="idValor">Valor</label>
                                    <input type="number" class="form-control" id="idValor" name="idValor" placeholder="Valor (R$)" value="" min="0" max="999999" required>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="ddlFornecedores">Fornecedor</label>
                                    <select id="ddlFornecedores" class="form-control"></select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="ddlClientes">Cliente</label>
                                    <select id="ddlClientes" class="form-control"></select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="ddlTiposServicos">Tipo de Servico</label>
                                    <select id="ddlTiposServicos" class="form-control"></select>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6" style="text-align: left">
                                    <a href="#" id="ocultar">
                                        <span class="glyphicon glyphicon-resize-small">Ocultar</span>
                                    </a>
                                </div>
                                <div class="form-group col-md-12">
                                    <div class="form-group col-md-6" style="text-align: right">
                                        <input type="button" id="btnSalvar" class="btn btn-success" value="Salvar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table id="tbServicoPrestado" class="table table-bordered table-striped table-hover">
                                <thead>
                                <tr>
                                    <th>Data do Atendimento</th>
                                    <th>Descrição do Serviço</th>
                                    <th>Serviço</th>
                                    <th>Cliente</th>
                                    <th>Fornecedor</th>
                                    <th>Valor(R$)</th>
                                    <th style="text-align: center">Opções</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DataAtendimentoddMMyyyy</td>
                                        <td>@item.DescricaoServico</td>
                                        <td>@item.TipoServico.Id - @item.TipoServico.Tipo</td>
                                        <td>@item.ClienteFornecedor.Cliente.Nome</td>
                                        <td>@item.ClienteFornecedor.Fornecedor.Nome</td>
                                        <td>@item.ValorServico</td>
                                        <td style="text-align: center">
                                            <span class="glyphicon glyphicon-trash" title="Remover" onclick="Remover(this,@item.Id)" style="cursor: pointer" id="@item.Id"></span>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/toastr.css" rel="stylesheet"/>
<link href="~/Content/toastr.min.css" rel="stylesheet"/>
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet"/>
@section Scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="@Url.Content("~/Scripts/ServicoPrestado/ServicoPrestadoJS.js")"></script>
}